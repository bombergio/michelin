---
import oneStar from '../images/oneStar.svg'
import twoStars from '../images/twoStars.svg'
import threeStars from '../images/threeStars.svg'
import type { Fields } from '../components/common/Types'

export interface Props {
  place: Fields
}

const { place } = Astro.props

function starsToImg(stars: number) {
  switch (stars) {
    case 1:
      return oneStar
    case 2:
      return twoStars
    case 3:
      return threeStars
  }
}

---
<div class="px-4 py-8 mx-auto">
  <div class="grid">
    <div class="flex flex-col justify-top">
      <div class="mb-1">
        <h3 class="mb-4 tracking-tight text-gray-900 text-xl font-bold sm:font-normal sm:text-2xl leading-none">
          {place.Name}
        </h3>
        <img src={starsToImg(place.Stars)} alt="Michelin star" class="inline object-center h-8 mb-3"/>
      </div>
      <div class="sm:gap-2">
        <ul class="flex flex-row flex-wrap sm:space-y-0 justify-center">
          <li class="flex ml-2 pb-2 sm:pb-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
              </svg>
            <div class="ml-1">
              {place.Date}
            </div>
          </li>
          <li class="flex ml-5">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            <div>
              {place.Location}, {place.Country}
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
