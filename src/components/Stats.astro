---
import { starsToIcon } from "../components/common/Helpers"

export interface Props {
  stars: number[]
}

const { stars } = Astro.props
---

<div
  class="sm:max-w-xl md:max-w-full lg:max-w-screen-xl lg:mx-20 px-4 md:px-24 lg:px-8 py-4 lg:pt-20 mb-6"
>
  <div class="flex flex-row flex-wrap justify-evenly row-gap-8">
    {
      stars.map((item, index) => (
        <div class="text-center mb-8 md:mb-0 basis-1/2 md:basis-1/3">
          <div class="text-6xl md:text-8xl font-bold">{item}</div>
          <img
            src={starsToIcon(index + 1)}
            alt="X Michelin stars"
            class="inline object-center h-8 md:h-10"
          />
        </div>
      ))
    }
  </div>
</div>
